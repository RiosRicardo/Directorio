<p id="notice"><%= notice %></p>

<h1>Listing Directories</h1>

<table>
  <thead>
    <tr>
      <th>Usuario rut</th>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Telefono</th>
      <th>Celular</th>
      <th>Comuna</th>
      <th>Ciudad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @directories.each do |directory| %>
      <tr>
        <td><%= directory.usuario_rut %></td>
        <td><%= directory.nombre %></td>
        <td><%= directory.descripcion %></td>
        <td><%= directory.telefono %></td>
        <td><%= directory.celular %></td>
        <td><%= directory.comuna %></td>
        <td><%= directory.ciudad %></td>
        <td><%= link_to 'Show', directory %></td>
        <td><%= link_to 'Edit', edit_directory_path(directory) %></td>
        <td><%= link_to 'Destroy', directory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

